using System;

namespace _5_task
{
    class Program
    {
        static void Main(string[] args)
        {
            

            while (true)
            {
                Console.Clear();
            
                Console.Write("Enter the number: ");

                int n = Convert.ToInt32(Console.ReadLine());

                int sum = 0;

                for (int i = 1; i <= n; i++)
                {
                    sum += i; 
                }
                Console.WriteLine(n);
                Console.WriteLine(sum);

                Console.ReadLine();

                

            }
        }
    }
}
